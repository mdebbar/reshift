{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "impliedStrict": true,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": [2, "always-multiline"],
    "quotes": [2, "single"],
    "semi": [2, "never"]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended"]
}
